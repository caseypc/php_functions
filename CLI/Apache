/*--------------------------------------------------------------------------------
| View Apache requests per day
|--------------------------------------------------------------------------------*/
awk '{print $4}' access_log example.com | cut -d: -f1 | uniq -c



/*--------------------------------------------------------------------------------
| View Apache requests per hour
|--------------------------------------------------------------------------------*/
grep "04/Aug" access_log example.com | cut -d[ -f2 | cut -d] -f1 | awk -F: '{print $2":00"}' | sort -n | uniq -c



/*--------------------------------------------------------------------------------
| View Apache requests per minute
|--------------------------------------------------------------------------------*/
grep "23/Jan/2013:06" access_log example.com | cut -d[ -f2 | cut -d] -f1 | awk -F: '{print $2":"$3}' | sort -nk1 -nk2 | uniq -c | awk '{ if ($1 > 10) print $0}'
